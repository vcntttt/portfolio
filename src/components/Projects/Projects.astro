---
import ProjectItem from "./ProjectItem.astro";
const imgStyle =
  "transition-scale absolute bottom-0 left-0 top-0 -z-10 h-full w-full rounded-xl opacity-90 bg-blend-luminosity duration-1000 ease-in-out group-hover:opacity-40 bg-cover scale-[100%] group-hover:scale-[110%]";
---

<div
  class=`
  w-full max-w-[1400px]
  grid grid-cols-12 auto-rows-[25rem] gap-4
  mx-auto
`
>
  <ProjectItem class="col-span-5" title="Url Shortener">
    <div
      slot="image"
      style="background-image: url(url-shortener.png)"
      class=`${imgStyle}`
    />
    <p slot="description" class="text-balance">
      Acortador de urls.
    </p>

  </ProjectItem>
  <ProjectItem class="col-span-7" title="Agenda Medica" />
  <ProjectItem class="col-span-7" title="Sellify">
    <div
      slot="image"
      style="background-image: url(sellify.png)"
      class=`${imgStyle}`
    />
    <p slot="description" class="text-balance">
      Sistema de gesti√≥n de inventario y punto de venta.
    </p>
  </ProjectItem>
  <ProjectItem class="col-span-5" title="Recetas" />
</div>
