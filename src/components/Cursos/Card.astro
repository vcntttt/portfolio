---
import { Icon } from "astro-icon/components";
import type { Curso } from "./cursos";

interface Props extends Curso {
  class?: string;
}

const { title, instructor, icon, link } = Astro.props;
---

<article class="flex flex-col gap-y-4 p-5 rounded-md bg-black/60 flex-1">
  <div class="flex">
    <Icon name={icon} class="size-8 text-black" />
    <div class="flex justify-between w-full items-center">
      <h3 class="text-xl font-semibold ml-1">{title}</h3>
      <a href={link} target="_blank">
        <Icon name={"external-link"} class="ml-1 size-6 text-white" aria-label="Ir a certificado" />
      </a>
    </div>
  </div>
  <p>{instructor}</p>
</article>
